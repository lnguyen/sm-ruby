#!/bin/sh

typeset _result url_files rvm_files _files

_result=0

files source "/etc/rvmrc" "$HOME/.rvmrc"

rvm_files=(
"$rvm_path/scripts/rvm"
"$HOME/.rvm/scripts/rvm"
"/usr/local/rvm/scripts/rvm"
)

_files=( $(files nonempty "${rvm_files[@]}") )
source "${_files[@]}"  || true

if ! command is function rvm
then
  url="https://raw.github.com/wayneeseguin/rvm/master/binscripts/rvm-installer"
  curl -L -sk "$url" -o rvm-installer
  chmod +x "rvm-installer"
  ./rvm-installer # -s stable
  files remove "rvm-installer"
fi

